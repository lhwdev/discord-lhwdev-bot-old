{
  "$schema": "https://cdn.deno.land/deno/versions/v1.14.0/raw/cli/schemas/config-file.v1.json",
  "include": [
    "src/",
    "config/"
  ],
  "compilerOptions": {
    "allowJs": true,
    "strict": true,

    "noImplicitAny": false,
    "noImplicitOverride": true,
    "experimentalDecorators": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": []
    }
  },
  "fmt": {
    "files": {
      "include": [
        "src/",
        "config/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}
